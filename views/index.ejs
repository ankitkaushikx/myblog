<%- include('./partials/header.ejs') %>
    <br>
    <div class="container">
        <div class="row">
            <% posts.forEach(function(post) { %>
                <div class="col-md-12 mb-4">
                    <div class="card" style="background: linear-gradient(to right, #454545, #707070);">
                        <div class="card-body">
                            <h5 class="card-title" style="color: white; font-weight: bold;">
                                <%= post.title %>
                            </h5>
                            <div>
                                <p class="card-text" style="color: white;">
                                    <%= post.content %>
                                </p>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center"
                            style="color: white; background: linear-gradient(to right, #999999, #999999);">
                            <div>
                                <span style="font-weight: bold;">Author:</span>
                                <%= post.author %>
                                    <span>&nbsp;&bull;&nbsp;</span>
                                    <span style="font-weight: bold;">Date:</span>
                                    <%= post.date %>
                            </div>
                            <div>
                                <a href="/delete/<%=post.id %>" class="btn btn-outline-danger me-2">Delete</a>
                                <a href="/edit/<%= post.id %>" class="btn btn-outline-dark me-2">Edit</a>
                                <a href="/post/<%= post.id %>" class="btn btn-success">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>